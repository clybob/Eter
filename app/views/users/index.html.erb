<h1>Listing users</h1>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Oauth token</th>
    <th>Oauth token secret</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.oauth_token %></td>
    <td><%= user.oauth_token_secret %></td>
    <td><%= link_to 'Show', user, :class=>'btn btn-mini' %></td>
    <td><%= link_to 'Edit', edit_user_path(user), :class=>'btn btn-mini' %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete, :class=>'btn btn-mini btn-danger' %></td>
  </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate @users %>

<%= link_to 'New User', new_user_path, :class => 'btn btn-mini' %>
