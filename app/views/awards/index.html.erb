<h1>Listing awards</h1>
<%= form_tag request.path, :method => 'get' do %>
  <% content_tag :label do %>
    Search :
    <%= text_field_tag :search, params[:search]%>
  <% end %>
<% end %>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @awards.each do |award| %>
  <tr>
    <td><%= award.name %></td>
    <td><%= award.description %></td>
    <td><%= award.url %></td>
    <td><%= link_to 'Show', award, :class => 'btn btn-mini'%></td>
    <td><%= link_to 'Edit', edit_award_path(award) , :class => 'btn btn-mini'%></td>
    <td><%= link_to 'Destroy', award, confirm: 'Are you sure?', method: :delete , :class => 'btn btn-mini btn-danger'%></td>
  </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate @users %>

<%= link_to 'New Award', new_award_path, :class => 'btn btn-mini btn-lista-adicionar' %>
