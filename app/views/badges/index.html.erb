<h1>Listing badges</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Point min</th>
    <th>Unique</th>
    <th>Shared</th>
    <th>Media</th>
    <th>Url</th>
    <th>Award</th>
    <th>Event</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @badges.each do |badge| %>
  <tr>
    <td><%= badge.name %></td>
    <td><%= badge.description %></td>
    <td><%= badge.point_min %></td>
    <td><%= badge.unique %></td>
    <td><%= badge.shared %></td>
    <td><%= badge.media %></td>
    <td><%= badge.url %></td>
    <td><%= badge.award.name %></td>
    <td><%= badge.event.name %></td>
    <td><%= link_to 'Show', badge, :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Edit', edit_badge_path(badge), :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Destroy', badge, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini' %></td>
  </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Badge', new_badge_path, :class => 'btn btn-mini' %>
